@model CartModel
<h1 class="h3">Shopping Cart</h1>
<hr>
<div class="row">
    <div class="col-md-8">
        <div class="text-left">
            <h4>Cart Items</h4>
        </div>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th></th>
                    <th>Product Name</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Total</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.CartItems)
                {
                    <tr>
                        <td>
                            <img src="~/images/@item.ImageUrl" alt="@item.Name" width="80">
                        </td>
                        <td>@item.Name</td>
                        <td>@item.Price</td>
                        <td>@item.Quantity</td>
                        <td>@(item.Quantity*@item.Price)</td>
                        <td>
                            <button class="btn btn-danger btn-sm"><i class="fa fa-times da-fw"></i></button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-md-4">
        <div class="text-left">
            <h4>Cart Summary</h4>
        </div>
        <table class="table table-hover">
            <tbody>
                <tr>
                    <th>Cart Total</th>
                    <td>@Model.TotalPrice().ToString()</td>
                </tr>
                <tr>
                    <th>Shipping</th>
                    <th>Free</td>
                </tr>
                <tr>
                    <th>Order Total</th>
                    <th>@Model.TotalPrice().ToString()</td>
                </tr>
            </tbody>
        </table>
        <div class="text-center">
            <a href="/" class="btn btn-primary">
                <i class="fa fa-arrow-circle-left fa-fw"></i>Product List
            </a>
            <a href="/" class="btn btn-primary">
                <i class="fa fa-arrow-circle-right fa-fw"></i>Checkout
            </a>
        </div>
    </div>
</div>