@model OrderModel

<h1 class="h3">Checkout</h1>
<hr>
<div class="row">
    <div class="col-md-8">
        <h3 class="mb-3">Order Details</h3>
        <form asp-controller="cart" asp-action="checkout" method="post">
            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="@Model.FirstName"></label>
                    <input type="text" asp-for="@Model.FirstName" class="form-control">
                </div>
                <div class="col-md-6">
                    <label  asp-for="@Model.FirstName"></label>
                    <input type="text" asp-for="@Model.FirstName" class="form-control">
                </div>
            </div>
            <div class="mb-3">
                <div>
                    <label asp-for="@Model.Address"></label>
                    <textarea asp-for="@Model.Address"class="form-control"></textarea>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4">
                    <label asp-for="@Model.City"></label>
                    <input type="text" asp-for="@Model.City" class="form-control">
                </div>
                <div class="col-md-4">
                    <label asp-for="@Model.Phone"></label>
                    <input type="text" asp-for="@Model.Phone"class="form-control">
                </div>
                <div class="col-md-4">
                    <label asp-for="@Model.Email"></label>
                    <input type="text" asp-for="@Model.Email" class="form-control">
                </div>
            </div>
            <h3 class="mb-3">Payment Information</h3>
            <hr>
            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="@Model.CardName"></label>
                    <input type="text" asp-for="@Model.CardName" class="form-control">
                </div>
                <div class="col-md-6">
                    <label asp-for="@Model.CardNumber"></label>
                    <input type="text" asp-for="@Model.CardNumber" class="form-control">
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-4">
                    <label asp-for="@Model.ExpirationMonth"></label>
                    <input type="text" asp-for="@Model.ExpirationMonth" class="form-control">
                </div>
                <div class="col-md-4">
                    <label asp-for="@Model.ExpirationYear"></label>
                    <input type="text" asp-for="@Model.ExpirationYear" class="form-control">
                </div>
                <div class="col-md-4">
                    <label asp-for="@Model.CVC"></label>
                    <input type="text" asp-for="@Model.CVC" class="form-control">
                </div>
            </div>
            <hr class="mb-3">
            <button type="submit" class="btn btn-primary btn-lg btn-block">Submit</button>
        </form>
    </div>
    <div class="col-md-4">
        <h4 class="h3 mb-3"><span>Order Summary</span></h4>
            <ul class="list-group mb-3">
                @foreach (var item in Model.CartModel.CartItems)
                {
                    <li class="list-group-item d-flex justify-content-between">
                        <div>
                            <h6>@item.Name</h6>
                        </div>
                        <small class="text-muted">@item.Price</small>
                    </li>
                }
                <li class="list-group-item d-flex justify-content-between">
                    <strong>Total</strong>
                    <strong>@Model.CartModel.TotalPrice().ToString()</strong>
                </li>
            </ul>
    </div>
</div>