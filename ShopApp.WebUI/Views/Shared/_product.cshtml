@model Product
<div class="card py-2 mb-4">
    <img class="card-img-top" src="~/images/@Model.ImageUrl" alt="@Model.Name">
    <div class="card-body">
        <h5 class="card-title ">@Model.Name</h5>
        <small class="text-muted"></small>
        <i class="fas fa-dolar-sign"></i>@Model.Price
        <div class="card-footer text-center">
                <a asp-controller="shop" asp-action="Details" asp-route-url="@Model.Url" class="btn btn-primary btn-sm mr-2">Details</a>
                <form asp-controller="Cart" asp-action="AddToCart" class="d-inline" method="post">
                    <input type="hidden" name="productId" value="@Model.ProductId">
                    <input type="hidden" name="quantity" value="1">
                    <button class="btn btn-primary btn-sm mr-2">Add to Cart</button>
                </form>
        </div>
    </div>
</div>