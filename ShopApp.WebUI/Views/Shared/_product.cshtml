@model Product
<div class="card py-2 mb-4">
    <img class="card-img-top" src="~/images/@Model.ImageUrl" alt="@Model.Name">
    <div class="card-body">
        <h5 class="card-title ">@Model.Name</h5>
        <p class="card-text text-muted py-3">@Model.Price</p>
        <div class="container">
            <div class="row">
                <a asp-controller="Product" asp-action="Details" asp-route-id="@Model.ProductId" class="btn btn-primary btn-sm mr-2">Details</a>
                <a asp-controller="Product" asp-action="Edit" asp-route-id="@Model.ProductId" class="btn btn-warning btn-sm mr-2">Edit</a>
                <form action="/Product/Delete" method="POST">
                        <input type="hidden" name="ProductId" value="@Model.ProductId">
                    <button type = "submit" class="btn btn-danger btn-sm">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>