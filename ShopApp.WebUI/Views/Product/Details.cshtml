@model Product

@section Categories
{
    @await Component.InvokeAsync("Categories")
}

<div class="card mb-3">
    <div class="row no-gutters">
        <div class="col-md-3">
            <img class="img-fluid" src="~/images/@Model.ImageUrl" alt="@Model.Name">
        </div>
        <div class="col-md-9">
            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>
                <p class="card-test">@Model.Description</p>
                <p class="card-text">
                    <small class="text-muted">3 days ago</small>
                </p>
            </div>
        </div>
    </div>
</div>