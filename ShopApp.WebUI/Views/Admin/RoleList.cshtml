@model IEnumerable<IdentityRole>

<h1 class="h3">Role List</h1>
<hr>
<a href="/admin/role/create" class="btn btn-primary btn-sm mb-3">Create Role</a>
<table class="table mt-3">
    <thead>
        <tr>
            <td>Id</td>
            <td>Name</td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count()>0)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td class="col-md-4">@item.Id</td>
                    <td class="col-md-6">@item.Name</td>
                    <td class="col-md-2">
                        <a href="/admin/role/edit/@item.Id" class="btn btn-primary btn-sm">Edit</a>
                        <form action="/admin/role/delete" method="post" class="d-inline">
                            <input type="hidden" name="Id" value="@item.Id">
                            <button type="submit" class="btn btn-danger btn-sm mr-2">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        }else
        {
            <div class="alert alert-warning">No Role!</div>
        }
    </tbody>
</table>