@model RoleDetails

<h1 class="h3">Create Edit</h1>
<hr>
<div class="row">
    <div class="col-md-12">
        <form asp-controller="Admin" asp-action="RoleEdit">
            <h6 class="bg-info text-white p-1">Add to @Model.Role.Name</h6>
            <input type="hidden" name="RoleId" value="@Model.Role.Id">
            <input type="hidden" name="RoleName" value="@Model.Role.Name">
            <table class="table table-stripped table-sm">
                @if (@Model.NonMembers.Count() == 0)
                {
                    <tr>
                        <td class="col-md-12">All users have the @Model.Role.Name Role!</td>
                    </tr>
                }
                else
                {
                    @foreach (var user in @Model.NonMembers)
                    {
                        <tr>
                            <td class="col-md-1">@user.UserName</td>
                            <td class="col-md-1">
                                <input type="checkbox" name="IdsToAdd" value="@user.Id">
                            </td>
                        </tr>
                    }

                }
            </table>
            <hr>
            <h6 class="bg-info text-white p-1">Remove from @Model.Role.Name</h6>
            <table class="table table-stripped table-sm">
                @if (@Model.Members.Count() == 0)
                {
                    <tr>
                        <td class="col-md-12">There are no users the @Model.Role.Name Role!</td>
                    </tr>
                }
                else
                {
                    @foreach (var user in @Model.Members)
                    {
                        <tr>
                            <td  class="col-md-1">@user.UserName</td>
                            <td  class="col-md-1">
                                <input type="checkbox" name="IdsToDelete" value="@user.Id">
                            </td>
                        </tr>
                    }
                }
            </table>
            <div class="form-group row">
                <div class="col-md-12">
                    <button type="submit" class="btn btn-success">Save Changes</button>
                </div>
            </div>
        </form>